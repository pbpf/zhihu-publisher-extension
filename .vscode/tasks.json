{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build",
      "type": "shell",
      "command": "npm run compile",
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {"reveal": "silent"}
    },
    {
      "label": "tsc: watch",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {"reveal": "never"}
    }
    ,
    {
      "label": "publish",
      "type": "shell",
      "command": "./node_modules/.bin/vsce publish major",
      "problemMatcher": [],
      "presentation": {"reveal": "always"},
      "options": {
        "env": {
          "VSCE_PAT": "${env:VSCE_PAT}",
          "PATH": "/opt/node/bin:${env:PATH}"
        }
      }
    }
  ],
}