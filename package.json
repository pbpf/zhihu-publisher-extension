{
  "name": "zhihu-publisher-extension",
  "displayName": "Zhihu Publisher",
  "description": "只包含知乎专栏一键发布 Markdown 的 VS Code 扩展",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-name/zhihu-publisher-extension.git"
  },
  "license": "MIT",
  "activationEvents": [
    "onCommand:zhihu.publishMarkdown"
  ],
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "build": "npm run compile",
    "bundle": "node build/esbuild-bundle.mjs",
    "package": "npm run bundle && vsce package",
    "debug": "code --extensionDevelopmentPath=${PWD} ."
  },
  "contributes": {
    "commands": [
      {
        "command": "zhihu.publishMarkdown",
        "title": "发布当前 Markdown 到知乎"
      }
    ]
  },
  "dependencies": {
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.11",
    "typescript": "^5.4.0"
  }
}
