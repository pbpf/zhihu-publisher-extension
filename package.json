{
  "name": "zhihu-publisher-extension",
  "displayName": "Zhihu Publisher",
  "description": "只包含知乎专栏一键发布 Markdown 的 VS Code 扩展",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {"vscode": "^1.85.0"},
  "categories": ["Other"],
  "main": "dist/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "build": "npm run compile",
    "package": "vsce package",
    "debug": "code --extensionDevelopmentPath=${PWD} ."
  },
  "contributes": {
    "commands": [
      {"command": "zhihu.publishMarkdown", "title": "发布当前 Markdown 到知乎"}
    ]
  },
  "dependencies": {
    "puppeteer": "^24.15.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0"
  }
}