{
  "name": "zhihu-publisher-extension",
  "displayName": "Zhihu Publisher",
  "description": "知乎一键发布 Markdown 的 VS Code 扩展",
  "version": "0.1.6",
  "publisher": "connor",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/pbpf/zhihu-publisher-extension.git"
  },
  "license": "MIT",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "icon": "images/logo.png",
  "files": [
    "LICENSE",
    "dist",
    "images",
    "node_modules/puppeteer",
    "node_modules/@puppeteer/browsers",
    "node_modules/chromium-bidi",
    "node_modules/cosmiconfig",
    "node_modules/puppeteer-core",
    "node_modules/typed-query-selector",
    "node_modules/semver",
    "node_modules/proxy-agent",
    "node_modules/lru-cache",
    "node_modules/debug",
    "node_modules/agent-base",
    "node_modules/ms",
    "node_modules/proxy-from-env",
    "node_modules/progress",
    "node_modules/ws",
    "node_modules/env-paths"
  ],
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "build": "npm run compile",
    "bundle": "node build/esbuild-bundle.mjs",
    "package": "npm run bundle && vsce package",
    "debug": "code --extensionDevelopmentPath=${PWD} ."
  },
  "contributes": {
    "commands": [
      {
        "command": "zhihu.publishMarkdown",
        "title": "发布当前 Markdown 到知乎"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.11",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "puppeteer": "^24.27.0"
  }
}
